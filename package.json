{
  "name": "@ads/ts-config-js",
  "version": "1.0.2",
  "description": "ADS系统的ts配置预设",
  "main": "lib/index.json",
  "scripts": {
    "lint": "eslint --ext .js,.vue,.json,.md lib",
    "lint:fix": "eslint --ext .js,.vue,.json,.md lib --fix",
    "docs": "ads-doc",
    "commit": "git add . && git commit --no-edit",
    "postversion": "npm run changelog",
    "prepublishOnly": "npm run docs && (git add . && git commit -m \"docs(readme): 更新文档\" || true)",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && exit 0",
    "postchangelog": "git add . && git commit -m \"docs(changelog): 更新CHANGELOG\" || true"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS",
    "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/agile-development-system/ts-config-js.git"
  },
  "keywords": [
    "ads",
    "ts",
    "tsconfig",
    "extends",
    "config"
  ],
  "author": "junyang",
  "license": "MIT",
  "dependencies": {
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@ads/cli-plugin-doc": "^1.0.6",
    "@ads/eslint-config-js": "^1.0.1",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.4",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog-zh": "^0.0.2",
    "lint-staged": "^11.0.0",
    "yorkie": "^2.0.0"
  }
}
